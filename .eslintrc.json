{
  "extends": [
    "airbnb"
  ],
  "ignorePatterns": [
    "/**/node_modules/**",
    "/**/dist/**",
    "mail/node_modules/**",
    "client/node_modules/**",
    "client/public/**",
    "auth/node_modules/**",
    "web-app/container/node_modules/**",
    "web-app/container/dist/**",
    "web-app/dashboard/node_modules/**",
    "web-app/dashboard/dist/**",
    "/**/*.d.ts"
  ],
  "parser": "@babel/eslint-parser",
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "requireConfigFile": false,
    "ecmaFeatures": {
      "jsx": true,
      "es6": true,
      "classes": true
    }
  },
  "rules": {
    "react/function-component-definition": 0,
    "react/jsx-props-no-spreading": 0,
    "react/destructuring-assignment": 0,
    "react/jsx-fragments": 0,
    "import/no-cycle": 0,
    "function-call-argument-newline": ["error", "consistent"],
    "react/jsx-wrap-multilines": 0,
    "default-param-last": 0,
    "class-methods-use-this": 1,
    "react/jsx-curly-newline": 0,
    "react/no-unstable-nested-components": 0,
    "no-restricted-exports": 0,
    "react/jsx-one-expression-per-line": 0,
    "react/no-unused-class-component-methods": 0,
    "import/no-useless-path-segments": 0,
    "react/jsx-no-constructed-context-values": 0,
    "react/no-invalid-html-attribute": 0,
    "react/button-has-type": 0,
    "react/jsx-no-useless-fragment": 0,
    "no-promise-executor-return": 0,
    "react/static-property-placement": 0,
    "jsx-a11y/label-has-associated-control": 0,
    "import/no-self-import": 0,
    "no-shadow-restricted-names": 0,
    "react/state-in-constructor": 0,
    "prefer-exponentiation-operator": 0,
    "react/jsx-curly-brace-presence": 0,
    "react/no-arrow-function-lifecycle": 0,

    "arrow-body-style": [0],
    "react/jsx-no-bind": [0],
    "import/no-unresolved": [0],

    "no-console": 0,
    "comma-dangle": 0,
    "object-property-newline": 0,
    "no-case-declarations": 0,
    "no-bitwise": 0,
    "operator-assignment": 0,
    "prefer-template": 0,
    "no-prototype-builtins": 0,
    "global-require": 0,
    "no-path-concat": 0,
    "consistent-return": 0,
    "no-restricted-syntax": 0,
    "no-restricted-properties": 0,
    "no-extra-boolean-cast": 0,
    "valid-typeof": 0,
    "no-sequences": 0,
    "newline-before-return": 0,

    "react/no-string-refs": 0,
    "react/prefer-stateless-function": 1,
    "react/no-danger": 0,
    "react/no-array-index-key": 0,
    "react/no-render-return-value": 0,
    "react/sort-comp": 0,
    "react/jsx-filename-extension": 0,
    "react/forbid-prop-types": 0,
    "react/require-default-props": 0,
    "react/no-unused-prop-types": 0,
    "react/prop-types": 0,
    "jsx-a11y/img-has-alt": 0,
    "jsx-a11y/href-no-hash": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "jsx-a11y/label-has-for": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "react-hooks/rules-of-hooks": "error",
    "react/no-unknown-property": 0
  },
  "overrides": [
    {
      "files": [
        "auth/**/*.{ts,tsx}"
      ],
      "parserOptions": {
        "project": "auth/tsconfig.json"
      },
      "extends": ["./ts-eslint-config.json"]
    },
    {
      "files": [
        "assets/**/*.ts"
      ],
      "parserOptions": {
        "project": "assets/tsconfig.json"
      },
      "extends": [
        "./ts-eslint-config.json",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
      ]
    },
    {
      "files": [
        "auth/**/*.test.{ts,tsx}",
        "auth/src/test/*.{ts,tsx}",
        "auth/**/__mocks__/*.{ts,tsx}",
        "auth/src/helpers/is-include-error-message.ts"
      ],
      "parserOptions": {
        "project": "auth/tsconfig-test.json"
      },
      "extends": ["./ts-eslint-config.json"]
    },
    {
      "files": [
        "mail/**/*.{ts,tsx}"
      ],
      "parserOptions": {
        "project": "mail/tsconfig.json"
      },
      "extends": ["./ts-eslint-config.json"]
    },
    {
      "files": [
        "client/client/**/*.{ts,tsx}"
      ],
      "parserOptions": {
        "project": "client/tsconfig.json"
      },
      "extends": ["next/core-web-vitals"]
    },
    {
      "files": "web-app/container/**/*.{ts,tsx}",
      "plugins": [
        "react-hooks",
        "react"
      ],
      "parserOptions": {
        "project": "web-app/container/tsconfig-ci.json"
      },
      "extends": ["./ts-eslint-config.json"]
    },
    {
      "files": "web-app/dashboard/**/*.{ts,tsx}",
      "plugins": [
        "react-hooks",
        "react"
      ],
      "parserOptions": {
        "project": "web-app/dashboard/tsconfig-ci.json"
      },
      "extends": ["./ts-eslint-config.json"]
    },
    {
      "files": [
        "*.{js,jsx,ts,tsx}"
      ],
      "parser": "@typescript-eslint/parser",
      "rules": {
        "implicit-arrow-linebreak": 0,
        "operator-linebreak": 0,
        "import/no-extraneous-dependencies": 0,
        "import/prefer-default-export": 0,
        "react/require-default-props": 0,
        "no-nested-ternary": 0,

        "no-mixed-operators": 0,
        "arrow-parens": ["error", "as-needed"],
        "function-paren-newline": 0,
        "object-curly-newline": 0,

        "no-unneeded-ternary": 0,
        "no-confusing-arrow": ["error", {"allowParens": true}],
        "no-param-reassign": 0,
        "no-plusplus": 0,
        "no-continue": 0,
        "no-script-url": 0,
        "no-debugger": 0,
        "no-constant-condition": ["error", { "checkLoops": false }],
        "no-console": 0,
        "import/extensions": 0,
        "react/jsx-props-no-spreading": 0,
        "react/function-component-definition": 0,
        "react/no-unused-prop-types": 0,
        "react/prop-types": 0,
        "react/jsx-no-useless-fragment": 0
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "no-unused-vars": 0,
        "@typescript-eslint/no-unused-vars": ["error"]
      }
    }
  ]
}
