{
  "extends": "@tickers-app/common-client/tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "allowJs": true,
    "moduleResolution": "node",
    "jsx": "preserve",

    "skipLibCheck": true,
    "outDir": "./build",
    "target": "ES2015",
    "declaration": true,
    "module": "ES2022",
    "esModuleInterop": true,
    "lib": ["es5", "es6", "dom"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "declares/init-web-app.d.ts",
    "declares/svg-icons.d.ts"
  ],
  "files": [
    "src/index.ts",
    "./node_modules/@tickers-app/common/declares/dashboard.d.ts",
    "./node_modules/@tickers-app/common-client/declares/init-web-app.d.ts"
  ]
}
